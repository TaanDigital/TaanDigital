---
interface Props {
	title: string;
	description: string;
	buttonText: string;
}

const { title, description, buttonText } = Astro.props;
---

<section class="cta">
	<div class="cta-content">
		<h2>{title}</h2>
		<p>{description}</p>
		<a href="/contacto" class="cta-button">{buttonText}</a>
	</div>
</section>

<style>
	.cta {
		background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
		padding: 6rem 2rem;
		text-align: center;
		color: white;
	}

	.cta-content {
		max-width: 800px;
		margin: 0 auto;
	}

	h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	p {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.cta-button {
		display: inline-block;
		background-color: white;
		color: #3182ce;
		padding: 1rem 2rem;
		border-radius: 0.5rem;
		font-size: 1.125rem;
		font-weight: 600;
		text-decoration: none;
		transition: transform 0.3s ease;
	}

	.cta-button:hover {
		transform: translateY(-2px);
	}
</style> 