---
// src/components/Footer.astro
import '../styles/footer.css';

const footerNavigation = {
  "Servicios": [
    "Marketing Digital",
    "Consultoría",
    "Diseño Web",
    "Social Media",
    "Content Marketing"
  ],
  "Empresa": [
    "Sobre Nosotros",
    "Equipo",
    "Casos de Éxito",
    "Blog",
    "Carreras"
  ],
  "Recursos": [
    "Guías",
    "Webinars",
    "Herramientas",
    "Newsletter",
    "Podcast"
  ]
};

const legalLinks = [
  "Términos y Condiciones",
  "Política de Privacidad",
  "Aviso Legal",
  "Cookies"
];

const socialLinks = [
  { icon: "facebook", url: "#" },
  { icon: "instagram", url: "#" },
  { icon: "linkedin", url: "#" },
  { icon: "twitter", url: "#" },
  { icon: "youtube", url: "#" }
];
---

<footer class="footer">
  <div class="container footer__container">
    <div class="footer__nav">
      {Object.entries(footerNavigation).map(([title, links]) => (
        <div class="footer__nav-section">
          <h3 class="footer__nav-title">{title}</h3>
          <ul class="footer__nav-list">
            {links.map(link => (
              <li class="footer__nav-item">
                <a href="#" class="footer__nav-link">{link}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      
      <div class="footer__nav-section">
        <h3 class="footer__nav-title">Contacto</h3>
        <ul class="footer__nav-list">
          <li class="footer__nav-item">
            <a href="mailto:info@estaraqui.com" class="footer__nav-link">info@estaraqui.com</a>
          </li>
          <li class="footer__nav-item">
            <a href="tel:+525555555555" class="footer__nav-link">+52 55 5555 5555</a>
          </li>
          <li class="footer__nav-item">
            <address class="footer__nav-link">
              CDMX, México
            </address>
          </li>
        </ul>
      </div>
    </div>

    <a href="/" class="footer__logo">
      <div class="footer-logo-wordmark">TÁ<span class="footer-n-path">A</span>N<span class="footer-digital"> DIGITAL</span></div>
    </a>

    <div class="footer__social">
      {socialLinks.map(({ icon, url }) => (
        <a href={url} class="footer__social-link" aria-label={icon}>
          <span class="material-icons">{icon}</span>
        </a>
      ))}
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        © {new Date().getFullYear()} Estar Aquí. Todos los derechos reservados.
      </p>
      
      <div class="footer__bottom-links">
        {legalLinks.map(link => (
          <a href="#" class="footer__bottom-link">{link}</a>
        ))}
      </div>
    </div>
  </div>
</footer>

<style>
  /* Estilos específicos para el logo en el footer */
  .footer-logo-wordmark {
    display: inline-block;
    position: relative;
    font-family: 'Montserrat', sans-serif;
    font-size: 1.8em;
    font-weight: 700;
    color: #FFFFFF;
    line-height: 0.9;
    letter-spacing: -0.03em;
    z-index: 1;
  }

  .footer-logo-wordmark span.footer-digital {
    color: #B3E6C1;
    font-weight: 600;
    margin-left: 0.1em;
    font-size: 0.8em;
    vertical-align: middle;
  }

  /* Efecto para la "Á" */
  .footer-logo-wordmark::before {
    content: '';
    position: absolute;
    top: -0.1em;
    left: 0.1em;
    width: 0.4em;
    height: 0.4em;
    background-color: #FF6B6B;
    border-radius: 50%;
    opacity: 0.8;
    z-index: 0;
    filter: blur(0.5px);
    transform: rotate(45deg);
    animation: footer-pulse-coral 2s infinite alternate;
  }

  @keyframes footer-pulse-coral {
    from { transform: scale(1) rotate(45deg); opacity: 0.8; }
    to { transform: scale(1.1) rotate(45deg); opacity: 1; }
  }

  /* Efecto para la "A" */
  .footer-logo-wordmark::after {
    content: '';
    position: absolute;
    bottom: -0.05em;
    right: 0.3em;
    width: 0.1em;
    height: 0.1em;
    background-color: #FFFFFF;
    transform: rotate(45deg);
    z-index: 2;
    opacity: 0.6;
  }

  /* Efecto para la "N" */
  .footer-n-path {
    position: relative;
    display: inline-block;
  }

  .footer-n-path::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background: linear-gradient(to right, #B3E6C1, #FFFFFF);
    bottom: -0.1em;
    left: 0;
    transform: scaleX(0.8);
    transform-origin: center;
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .footer-logo-wordmark {
      font-size: 1.8em;
    }
  }
</style>