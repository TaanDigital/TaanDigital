---
// src/components/Footer.astro
import '../styles/footer.css';

const footerNavigation = {
  "Servicios": [
    "Marketing Digital",
    "Consultoría",
    "Diseño Web",
    "Social Media",
    "Content Marketing"
  ],
  "Empresa": [
    "Sobre Nosotros",
    "Equipo",
    "Casos de Éxito",
    "Blog",
    "Carreras"
  ],
  "Recursos": [
    "Guías",
    "Webinars",
    "Herramientas",
    "Newsletter",
    "Podcast"
  ]
};

const legalLinks = [
  "Términos y Condiciones",
  "Política de Privacidad",
  "Aviso Legal",
  "Cookies"
];

const socialLinks = [
  { icon: "facebook", url: "#" },
  { icon: "instagram", url: "#" },
  { icon: "linkedin", url: "#" },
  { icon: "twitter", url: "#" },
  { icon: "youtube", url: "#" }
];
---

<footer class="footer">
  <div class="container footer__container">
    <div class="footer__nav">
      {Object.entries(footerNavigation).map(([title, links]) => (
        <div class="footer__nav-section">
          <h3 class="footer__nav-title">{title}</h3>
          <ul class="footer__nav-list">
            {links.map(link => (
              <li class="footer__nav-item">
                <a href="#" class="footer__nav-link">{link}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      
      <div class="footer__nav-section">
        <h3 class="footer__nav-title">Contacto</h3>
        <ul class="footer__nav-list">
          <li class="footer__nav-item">
            <a href="mailto:info@estaraqui.com" class="footer__nav-link">info@estaraqui.com</a>
          </li>
          <li class="footer__nav-item">
            <a href="tel:+525555555555" class="footer__nav-link">+52 55 5555 5555</a>
          </li>
          <li class="footer__nav-item">
            <address class="footer__nav-link">
              CDMX, México
            </address>
          </li>
        </ul>
      </div>
    </div>

    <a href="/" class="footer__logo">
      ESTAR AQUÍ
    </a>

    <div class="footer__social">
      {socialLinks.map(({ icon, url }) => (
        <a href={url} class="footer__social-link" aria-label={icon}>
          <span class="material-icons">{icon}</span>
        </a>
      ))}
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        © {new Date().getFullYear()} Estar Aquí. Todos los derechos reservados.
      </p>
      
      <div class="footer__bottom-links">
        {legalLinks.map(link => (
          <a href="#" class="footer__bottom-link">{link}</a>
        ))}
      </div>
    </div>
  </div>
</footer>