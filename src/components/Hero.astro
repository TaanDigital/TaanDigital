---
interface Props {
	title: string;
	subtitle: string;
	ctaText: string;
}

const { title, subtitle, ctaText } = Astro.props;
---

<section class="hero">
	<div class="hero-content">
		<h1>{title}</h1>
		<p>{subtitle}</p>
		<button class="cta-button">{ctaText}</button>
	</div>
</section>

<style>
	.hero {
		background: linear-gradient(135deg, #f5f7fa 0%, #e4e7eb 100%);
		min-height: 80vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		text-align: center;
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		font-size: 3.5rem;
		color: #1a202c;
		margin-bottom: 1rem;
		line-height: 1.2;
	}

	p {
		font-size: 1.5rem;
		color: #4a5568;
		margin-bottom: 2rem;
	}

	.cta-button {
		background-color: #4299e1;
		color: white;
		padding: 1rem 2rem;
		border: none;
		border-radius: 0.5rem;
		font-size: 1.125rem;
		font-weight: 600;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}

	.cta-button:hover {
		background-color: #3182ce;
	}
</style> 